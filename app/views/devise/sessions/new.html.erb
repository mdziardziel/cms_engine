<h2><%= t('cms_engine.account.login_form.title') %></h2>
<hr>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
  <div class='form-group mt-3'>
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>


  <div class="form-group mt-3">
    <%= form.label t('cms_engine.account.login_form.password') %>
    <%= form.password_field :password, autocomplete: t('cms_engine.account.login_form.current_password'), class: 'form-control' %>
  </div>
  
  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= form.check_box :remember_me %>
      <%= form.label t('cms_engine.account.login_form.remember_me') %>
    </div>
  <% end %>

  <div class="form-group mt-5">
    <%= form.submit t('cms_engine.account.login_form.title'), class: 'btn btn-primary' %>
  </div>
  
<% end %>
